        "# 台形の辺と高さの値\n",
        "top_side = 10 # 上辺(cm)\n",
        "bottom_side = 20 # 下辺(cm)\n",
        "height = 5 # 高さ(cm)\n",
        "\n",
        "# 台形の面積の計算\n",
        "area = (top_side + bottom_side) * height / 2\n",
        "\n",
        "# 結果の出力\n",
        "print(f\"{area}cm²\")"
